<%- include("header") -%>
    <div class="box" id="heading">
      <h1><%= listTitle %></h1>
    </div>

    <div class="box">
        <% newItemList.forEach(function(newItem){ %>
          <form class="" action="/delete" method="post">
            <div class="item">
              <input name="checkbox" type="checkbox" value="<%= [newItem._id, listTitle]%>" onChange="this.form.submit()">
              <p><%= newItem.name %></p>
            </div>
          </form>

        <% }) %>

        <form class="item" action="/" method="post">
          <input type="text" name="todoItem" placeholder="New Item" autocomplete="off">
          <button type="submit" name="list" value="<%= listTitle %>">+</button>
        </form>
    </div>
<%- include("footer") -%>
